<div class="columns is-centered">
  <div class="column is-8">
    <br>
    <h1 class="title is-2"><%= @user.name %></h1>
    <h1 class="subtitle is-5">Videos</h1>
    <div class="columns is-multiline">
      <% @videos.each do |video| %>
        <div class="column is-half">
          <a href="/videos/<%= video.id %>">
            <div class="card">
              <div class="card-image">
                <figure class="image is-16by9">
                  <img src="<%= video.thumbnail_url %>" alt="Placeholder image">
                </figure>
              </div>
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <p class="title is-4"><%= video.name %></p>
                    <p class="subtitle is-6"><%= video.user.name %></p>
                  </div>
                </div>
              </div>
              <% if session[:user_id] == @user.id %>
                <footer class="card-footer">
                  <%= link_to "Download", "/users/download/#{video.id}", class: "card-footer-item", method: :post, target: "_blank" %>
<!--                  <a href="#" class="card-footer-item" style="color: #EB4034">Delete</a>-->
                  <%= link_to "Delete", videos_delete_path(:id => video.id), class: "card-footer-item", style: "color: #EB4034", method: :post %>
                </footer>
              <% end %>
            </div>
